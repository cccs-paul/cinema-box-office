# Development Dockerfile for Angular Frontend
# Uses Ubuntu with Node.js for development
FROM ubuntu:24.04

WORKDIR /app

# Install Node.js and essential tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    gnupg \
    ca-certificates && \
    curl -fsSL https://deb.nodesource.com/setup_20.x | bash - && \
    apt-get install -y --no-install-recommends nodejs && \
    rm -rf /var/lib/apt/lists/*

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:4200/ || exit 1

# Expose port
EXPOSE 4200

# Copy package files
COPY frontend/package*.json ./

# Install dependencies (including all optional dependencies for Angular)
RUN npm install

# Copy source code
COPY frontend/ ./

# Start Angular dev server with proper host binding
CMD ["npx", "ng", "serve", "--host", "0.0.0.0", "--poll", "2000"]
